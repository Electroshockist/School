#!/bin/bash
TITLE="System Information for $HOSTNAME"
CURRENT_DATE="Today is: $(date +'%Y-%m-%d')"
BY_USER="Generated by $USER"
#clear
echo "<head>"
echo "<title>$TITLE</title>"
echo "</head>"
echo "<body>"
echo "<h1>$TITLE</h1>"
echo "<p>$CURRENT_DATE</p>"
echo "<p>$BY_USER</p>"
echo "</body>"
echo "</html>" 
