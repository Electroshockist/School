<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <Button
        android:id="@+id/Grid00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/blank"
        android:onClick="onSelect"
        app:layout_constraintBottom_toTopOf="@+id/Grid10"
        app:layout_constraintEnd_toStartOf="@+id/Grid01"
        />

    <Button
        android:id="@+id/Grid01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/blank"
        android:onClick="onSelect"
        app:layout_constraintBottom_toTopOf="@+id/Grid11"
        app:layout_constraintEnd_toEndOf="@+id/Grid11"
        app:layout_constraintStart_toStartOf="@+id/Grid11"
        />

    <Button
        android:id="@+id/Grid02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/blank"
        android:onClick="onSelect"
        app:layout_constraintBottom_toTopOf="@+id/Grid12"
        app:layout_constraintStart_toEndOf="@+id/Grid01"
        />

    <Button
        android:id="@+id/Grid10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/blank"
        android:onClick="onSelect"
        app:layout_constraintBottom_toBottomOf="@+id/Grid11"
        app:layout_constraintEnd_toStartOf="@+id/Grid11"
        app:layout_constraintTop_toTopOf="@+id/Grid11"
        />

    <Button
        android:id="@+id/Grid11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/blank"
        android:onClick="onSelect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/Grid12"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/blank"
        android:onClick="onSelect"
        app:layout_constraintBottom_toBottomOf="@+id/Grid11"
        app:layout_constraintStart_toEndOf="@+id/Grid11"
        app:layout_constraintTop_toTopOf="@+id/Grid11"
        />

    <Button
        android:id="@+id/Grid20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/blank"
        android:onClick="onSelect"
        app:layout_constraintEnd_toStartOf="@+id/Grid21"
        app:layout_constraintTop_toBottomOf="@+id/Grid10"
        />

    <Button
        android:id="@+id/Grid21"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/blank"
        android:onClick="onSelect"
        app:layout_constraintEnd_toEndOf="@+id/Grid11"
        app:layout_constraintStart_toStartOf="@+id/Grid11"
        app:layout_constraintTop_toBottomOf="@+id/Grid11"
        />

    <Button
        android:id="@+id/Grid22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/blank"
        android:onClick="onSelect"
        app:layout_constraintStart_toEndOf="@+id/Grid21"
        app:layout_constraintTop_toBottomOf="@+id/Grid12"
        />

</android.support.constraint.ConstraintLayout>